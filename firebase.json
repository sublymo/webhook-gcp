{
  // Firestore is configured here
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  // Firebase Hosting and URL Rewrites are confiured here
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    // Make sure that /notify/changes/ is handled by the Receive Function
    "rewrites": [
      {
        "source": "/notify/changes/**",
        "function": {
          "functionId": "receive"
        }
      }
    ],
    "cleanUrls": true,
    "trailingSlash": true
  },
  // Cloud Functions are configured here
  "functions": [
    {
      "source": "webhook/dispatch",
      "codebase": "dispatch",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    },
    {
      "source": "webhook/receive",
      "codebase": "receive",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    },
    {
      "source": "webhook/process",
      "codebase": "process",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
